          "limit": 1,
          "formGroupTemplate": [
            {
              "type": "select",
              "name": "location",
              "label": "Location",
              "placeholder": "Select location",
              "validators": {
                "required": true
              },
              "options": ["Anywhere in India"]
            },
            {
              "type": "select",
              "name": "type_machinery",
