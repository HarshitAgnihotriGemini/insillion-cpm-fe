{
  "title": "Contractor Plant and Machinery",
  "breadCrumbs": [
    {
      "title": "Dashboard",
      "link": "/dashboard"
    },
    {
      "title": "Engineering",
      "link": "/cl"
    },
    {
      "title": "New Quote",
      "link": "/new-quote",
      "isActive": true
    }
  ],
  "sections": [
    {
      "title": "Quotation",
      "isCollapsible": true,
      "isExpandedByDefault": false,
      "subsections": [
        {
          "title": "Contractor Plant and Machinery Insurance",
          "fields": [
            {
              "type": "input",
              "name": "imd_code",
              "label": "Intermediary",
              "placeholder": "Enter Intermediary",
              "validators": {
                "required": true
              },
              "errors": {
                "required": "Intermediary is required."
              },
              "events": [{ "name": "change", "action": "validateIntermediary" }]
            },
            {
              "type": "select",
              "name": "propositionSelection",
              "label": "Proposition Selection",
              "placeholder": "Select proposition selection",
              "optionsKey": "propositionOptions",
              "validators": {
                "required": true
              },
              "events": [{ "name": "change", "action": "onPropositionChange" }]
            },
            {
              "type": "select",
              "name": "policy_transaction_type",
              "label": "Transaction Type",
              "optionsKey": "transactionTypeOptions",
              "placeholder": "Select transaction type",
              "events": [
                { "name": "change", "action": "onTransactionTypeChange" }
              ],
              "validators": {
                "required": true
              }
            },
            {
              "type": "input",
              "name": "proposer_name_primary_insured",
              "label": "Customer First Name",
              "placeholder": "Enter customer first name",
              "validators": {
                "required": true,
                "minLength": 2
              },
              "errors": {
                "required": "Customer first name is required.",
                "minlength": "Customer first name must be at least {requiredLength} characters long"
              }
            },
            {
              "type": "input",
              "name": "mobile_no",
              "label": "Customer Contact Number",
              "placeholder": "Enter customer contact number",
              "validators": {
                "required": true,
                "minLength": 10,
                "maxLength": 10
              },
              "errors": {
                "required": "Customer contact number is required.",
                "minLength": "Invalid Customer Contact number",
                "maxLength": "Invalid Customer Contact number"
              }
            },
            {
              "type": "input",
              "inputType": "email",
              "name": "email",
              "label": "Proposer Email",
              "placeholder": "Enter proposer email",
              "validators": {
                "required": true,
                "pattern": "EMAIL"
              },
              "errors": {
                "required": "Proposer email is required.",
                "pattern": "Please enter a valid email address."
              }
            },
            {
              "type": "datepicker",
              "name": "policy_start_date",
              "label": "Policy Start Date",
              "placeholder": "Select policy start date",
              "validators": {
                "required": true
              },
              "events": [{ "name": "change", "action": "onDateChange" }]
            },
            {
              "type": "datepicker",
              "name": "policy_end_date",
              "label": "Policy End Date",
              "placeholder": "Select policy end date",
              "errors": {
                "required": "Proposer email is required.",
                "pattern": "Please enter a valid email address."
              },
              "events": [{ "name": "change", "action": "onDateChange" }]
            },
            {
              "type": "input",
              "name": "sezPrevilege",
              "label": "SEZ Previlege",
              "placeholder": "Enter SEZ previlege",
              "value": "Apply-GST",
              "validators": {
                "required": true
              },
              "readonly": true,
              "errors": {
                "required": "SEZ previlege is required."
              }
            },
            {
              "type": "input",
              "name": "leadCode",
              "label": "Lead Code",
              "placeholder": "Enter lead code",
              "readonly": true
            },
            {
              "type": "select",
              "name": "product",
              "label": "Product",
              "placeholder": "Select product",
              "optionsKey": "productOptions",
              "validators": {
                "required": true
              }
            }
          ]
        },
        {
          "title": "Branch Details",
          "fields": [
            {
              "type": "select",
              "name": "pol_serv_branch_name",
              "label": "Branch",
              "placeholder": "Select branch",
              "optionsKey": "branchListOptions",
              "validators": {
                "required": true
              }
            }
          ]
        }
      ]
    },
    {
      "title": "Risk Details",
      "isCollapsible": true,
      "isExpandedByDefault": true,
      "subsections": [
        {
          "title": "Floater Details",
          "fields": [
            {
              "type": "select",
              "name": "floater",
              "label": "Floater",
              "placeholder": "Select floater",
              "value": "No",
              "options": ["Yes", "No"]
            },
            {
              "type": "select",
              "name": "floater_coverage_in",
              "label": "Floater Coverage Within",
              "placeholder": "Select floater coverage within",
              "validators": {},
              "errors": {
                "required": "Floater Coverage Within is required."
              },
              "visibleWhen": { "field": "floater", "value": "Yes" },
              "validatorsWhen": [
                {
                  "condition": { "field": "floater", "value": "Yes" },
                  "validators": { "required": true }
                }
              ]
            },
            {
              "type": "select",
              "name": "projectInWhichMachineryIsOperated",
              "label": "Project in Which Machinery is Operated",
              "placeholder": "Select project in which machinery is operated"
            }
          ]
        },
        {
          "title": "Machinery Details",
          "type": "form-array",
          "name": "machineryDetails",
          "addButtonLabel": "Add Machinery Details",
          "formGroupTemplate": [
            {
              "type": "select",
              "name": "location",
              "label": "Location",
              "placeholder": "Select location",
              "validators": {
                "required": true
              }
            },
            {
              "type": "select",
              "name": "type_machinery",
              "label": "Machinery",
              "placeholder": "Select machinery"
            },
            {
              "type": "input",
              "name": "machinery_description",
              "label": "Description",
              "placeholder": "Enter description"
            },
            {
              "type": "input",
              "name": "make",
              "label": "Make",
              "placeholder": "Enter make",
              "validators": {
                "required": true
              }
            },
            {
              "type": "input",
              "name": "model",
              "label": "Model",
              "placeholder": "Enter model",
              "validators": {
                "required": true
              }
            },
            {
              "type": "input",
              "name": "slno",
              "label": "Serial/Chassis No",
              "placeholder": "Enter serial no",
              "validators": {
                "required": true
              }
            },
            {
              "type": "input",
              "name": "capacity",
              "label": "Capacity",
              "placeholder": "Enter capacity"
            },
            {
              "type": "input",
              "inputType": "text",
              "name": "yom",
              "label": "Year of Manufacturing",
              "placeholder": "Enter year of manufacturing",
              "validators": {
                "required": true
              }
            },
            {
              "type": "input",
              "inputType": "text",
              "name": "cost_of_machinery_si",
              "label": "Cost of Machinery",
              "placeholder": "Enter cost of machinery",
              "validators": {
                "required": true
              }
            },
            {
              "type": "select",
              "name": "voluntary_excess",
              "label": "Voluntary Excess",
              "placeholder": "Select voluntary excess"
            }
          ]
        },
        {
          "title": "Premium Detariff",
          "fields": [
            {
              "type": "input",
              "inputType": "text",
              "name": "deTariffDiscount",
              "label": "Less : De-Tariff Discount (%)",
              "placeholder": "Enter discount",
              "validators": {
                "required": true
              }
            }
          ]
        },
        {
          "title": "Policy Addons",
          "fields": [
            {
              "type": "select",
              "name": "earthquake_req",
              "label": "Earthquake Required",
              "placeholder": "Select earthquake required"
            },
            {
              "type": "select",
              "name": "terrorism_req",
              "label": "Terrorism Cover",
              "placeholder": "Select terrorism cover",
              "validators": {
                "required": true
              }
            }
          ]
        },
        {
          "title": "Coverage Options",
          "fields": [
            {
              "type": "select",
              "name": "package_plan",
              "label": "Optional Cover",
              "optionsKey": "packagePlanOptions",
              "placeholder": "Select optional cover"
            }
          ],
          "actions": [
            {
              "type": "button",
              "label": "Add Covers",
              "name": "addCoversBtn",
              "action": "addCovers",
              "iconPath": "https://harshitagnihotrigemini.github.io/insillion-common-styles-fe-harshit/assets/images/icon-add.svg"
            }
          ]
        },
        {
          "title": "Manual Referral",
          "fields": [
            {
              "type": "select",
              "name": "manual_referral",
              "label": "Underwriter Referral Needed for This Quote?",
              "placeholder": "Select an option",
              "value": "no",
              "options": [
                {
                  "key": "yes",
                  "name": "Yes"
                },
                {
                  "key": "no",
                  "name": "No"
                }
              ]
            },
            {
              "type": "input",
              "inputType": "text",
              "name": "underwriterRemarks",
              "label": "Underwriter Remarks",
              "placeholder": "Enter remarks",
              "showWhen": {
                "field": "underwriterReferralNeeded",
                "value": "yes"
              },
              "validators": {
                "requiredWhen": {
                  "field": "underwriterReferralNeeded",
                  "value": "yes"
                }
              }
            }
          ]
        }
      ]
    },
    {
      "title": "Attachments",
      "isCollapsible": true,
      "isExpandedByDefault": false,
      "componentType": "attachments",
      "addButtonLabel": "Add More"
    }
  ],
