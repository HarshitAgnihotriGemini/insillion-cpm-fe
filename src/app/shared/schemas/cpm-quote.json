            {
              "type": "input",
              "inputType": "text",
              "name": "deTariffDiscount",
              "label": "Less : De-Tariff Discount (%)",
              "placeholder": "Enter discount",
              "validators": {
                "required": true
              }
            }
          ]
        },
        {
          "title": "Policy Addons",
          "fields": [
            {
              "type": "select",
              "name": "earthquake_req",
              "label": "Earthquake Required",
              "placeholder": "Select earthquake required",
              "options": ["Yes", "No"]
            },
            {
              "type": "select",
              "name": "terrorism_req",
              "label": "Terrorism Cover",
              "placeholder": "Select terrorism cover",
              "validators": {
                "required": true
